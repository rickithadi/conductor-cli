#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit quality checks..."

# Run lint-staged for changed files
npx lint-staged

# Run critical E2E test to ensure onboarding flow works
echo "🧪 Running critical E2E test..."
npm run test:e2e -- --testNamePattern="should handle quick initialization successfully" --verbose=false

echo "✅ Pre-commit checks passed!"