{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "noImplicitAny": false,
    "removeComments": true,
    "importHelpers": true,
    "inlineSourceMap": false,
    "inlineSources": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "src/**/*.test.ts", "src/**/__tests__/**/*"]
}